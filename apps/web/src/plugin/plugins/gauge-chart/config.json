{
    "type": "gaugeChart",
    "name": "Gauge chart",
    "class": "data_chart",
    "icon": "./icon.png",
    "defaultRow": 4,
    "defaultCol": 6,
    "minRow": 4,
    "minCol": 4,
    "configProps": [
        {
            "style": "width: 100%",
            "components": [
                {
                    "type": "entitySelect",
                    "title": "Entity",
                    "key": "entity",
                    "style": "width: 100%",
                    "getDataUrl": "",
                    "componentProps": {
                        "size": "small",
                        "entityType": ["PROPERTY"],
                        "entityValueTypes": ["LONG", "DOUBLE"]
                    },
                    "rules": {
                        "required": true
                    }
                }
            ]
        },
        {
            "components": [
                {
                    "type": "input",
                    "title": "Title",
                    "key": "title",
                    "style": "width: 100%",
                    "defaultValue": "Title",
                    "componentProps": {
                        "size": "small",
                        "inputProps": {
                            "maxLength": 15
                        }
                    }
                }
            ]
        },
        {
            "style": "width: 100%;",
            "components": [
                {
                    "type": "ChartTimeSelect",
                    "title": "Time",
                    "key": "time",
                    "style": "width: 100%;",
                    "componentProps": {
                        "size": "small"
                    },
                    "defaultValue": 86400000
                }
            ]
        },
        {
            "style": "width: 100%;",
            "components": [
                {
                    "type": "chartMetricsSelect",
                    "title": "metrics",
                    "key": "metrics",
                    "style": "width: 100%;",
                    "componentProps": {
                        "size": "small"
                    },
                    "defaultValue": "LAST",
                    "filters": ["SUM", "COUNT"]
                }
            ]
        }
    ],
    "view": [
        {
            "tag": "div",
            "class": "ms-gauge-chart",
            "style": "display: flex; flex-direction: column; justify-content: center; width: 100%; min-width: 100%; height: 100%; padding: 16px; background: var(--main-background);",
            "children": [
                {
                    "tag": "Tooltip",
                    "class": "ms-gauge-chart__header",
                    "style": "font-size: 16px; font-weight: bold;",
                    "props": {
                        "autoEllipsis": true
                    },
                    "params": ["title"]
                },
                {
                    "tag": "div",
                    "class": "ms-gauge-chart__content",
                    "style": "display: flex; flex: 1; align-items: center; justify-content: center; overflow: hidden;",
                    "children": [
                        {
                            "tag": "GaugeChart",
                            "style": "width: 100%; height: 100%;",
                            "adapter": {
                                "model": "getAggregateHistory"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
